extends layout

block content
  h1(style="color: black; text-align: center; font-size: 40px; font-weight: bold")= "Add a Review"
  form.show_reviews(method='post' action="/users")
    .form-group 
      label(for='username') Name: 
      input#username.form-control(type='text', placeholder='You can choose to stay anonymous', required=true, name='username')
    .form-group 
      label(for='class') Class Year: 
      input#class.form-control(type='number', placeholder='Ex: 2025, 2023, etc.', required=true, name='class')
    .form-group 
      label(for="landlord") Landlord name: 
      input#landlord.form-control(type='text', required=true, name='landlord')
    .form-group 
      label(for="property") Property Address: 
      input#property.form-control(type='text',required=true, name='property')
    .form-group 
      label(for='review') Review: 
      textarea#review.form-control(type="text", required=true, name='review')
    .form-group 
      label(for='rating') Rating: 
      input#rating.form-control(type='number', step="0.1",required=true, name='rating', placeholder="Please enter a number within 1.0 and 5.0")
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      each err in errors
        li=err.msg
      
    
  